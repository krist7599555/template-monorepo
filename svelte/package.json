{
  "name": "svelte-app",
  "version": "1.0.0",
  "scripts": {
    "prebuild": "NODE_ENV=production PURGE_CSS=true yarn build:css",
    "build": "rollup -c",
    "build:css": "postcss ./src/global.scss -o ./public/global.css",
    "watch:css": "postcss ./src/global.scss -o ./public/global.css -w",
    "dev": "rollup -c -w & yarn watch:css",
    "start": "sirv public",
    "validate": "svelte-check",
    "predeploy": "yarn build",
    "deploy": "firebase deploy --only hosting"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^14.0.0",
    "@rollup/plugin-node-resolve": "^8.0.0",
    "@rollup/plugin-typescript": "^6.0.0",
    "@tsconfig/svelte": "^1.0.0",
    "@types/lodash": "^4.14.161",
    "autoprefixer": "^10.0.1",
    "cssnano": "^4.1.10",
    "postcss": "^8.1.1",
    "postcss-cli": "^8.0.0",
    "postcss-scss": "^3.0.2",
    "rollup": "^2.3.4",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-svelte": "^6.0.0",
    "rollup-plugin-terser": "^7.0.0",
    "svelte": "^3.0.0",
    "svelte-check": "^1.0.0",
    "svelte-preprocess": "^4.0.0",
    "tailwindcss": "^1.8.10",
    "tslib": "^2.0.0",
    "typescript": "^3.9.3"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "gsap": "^3.5.1",
    "lodash": "^4.17.20",
    "sirv-cli": "^1.0.0",
    "svelte-spa-router": "^3.0.3"
  }
}
